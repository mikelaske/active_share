<div class="page-header">
  <h2><%= @fund.name %></h2>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Active Share</dt>
      <dd><%= @fund.score %></dd>

      <dt>Group Name</dt>
      <dd><%= @fund.group_name %></dd>

      <dt>Ticker</dt>
      <dd><%= @fund.ticker %></dd>

      <dt>Inception Date</dt>
      <dd><%= @fund.inception_date %></dd>

      <dt>Portfolio Date</dt>
      <dd><%= @fund.portfolio_date %></dd>

      <dt>Equity Percentage</dt>
      <dd><%= @fund.equity_percentage %></dd>

      <dt>Holdings</dt>
      <dd><%= @fund.holdings %></dd>

      <dt>Notes</dt>
      <dd><%= @fund.notes %></dd>

   <!-- Label and input for notes -->
    <div class="form-group">
      <form action="/update_fund/:id" method="post" class="form-horizontal" enctype="multipart/form-data">
      <label for="notes" class="control-label">
        My Notes
      </label>

      <textarea id="notes" name="notes" placeholder="Notes" class="form-control" rows="3"><%= @fund.notes %></textarea>
      <h2></h2>
      <input type="submit" class="btn btn-danger" value="Add Notes" />
      </form>
    </div>

    <a href="/favorites" method="post" class="btn btn-danger btn-sm">
    Add to Favorites
    </a>
    </dl>

    <a href="/funds" class="btn btn-danger btn-sm" data-dismiss="modal" aria-hidden="true">Back</a>
  </div>
</div>
