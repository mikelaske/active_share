<div class="page-header">
  <h2>
    Group Selection
  </h2>
</div>

<div class="row">
  <div class="col-md-3">
    <table class="table table-striped table-hover">
      <tr>
        <th colspan="1" scope="col">Name</th>
        <th colspan="1" scope="col">Average</th>
        <th colspan="1" scope="col">Details</th>
      </tr>

      <% @groups.each do |group| %>
      <tr>
        <td><a href="/groups/<%= group.id %>"></a><%= group.name %></td>
        <td><%= group.mean %></td>
        <td><a href="/groups/<%= group.id %>" class="btn btn-primary">Show</a></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

