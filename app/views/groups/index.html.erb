<div class="page-header">
  <h2>
    Groups
  </h2>
</div>

<div class="row center col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th scope="col" colspan="1">Name</th>
        <th scope="col" colspan="1">Average</th>
        <th scope="col" colspan="1">Details</th>
      </tr>

      <% @groups.each do |group| %>
      <tr>
        <td><a href="/funds"><%= group.name %></a></td>
        <td><%= group.mean %></td>
        <td><a href="/groups/<%= group.id %>">Details</a></td>
      </tr>
      <% end %>
    </table>
</div>


