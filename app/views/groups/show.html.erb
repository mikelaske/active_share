<div class="page-header">
  <h2><%= @group.name %></h2>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Average</dt>
      <dd><%= @group.mean %></dd>

      <dt>Median</dt>
      <dd><%= @group.median %></dd>

      <dt>Standard Deviation</dt>
      <dd><%= @group.std_dev %></dd>

      <dt>5th Percentile</dt>
      <dd><%= @group.five %></dd>

      <dt>25th Percentile</dt>
      <dd><%= @group.twentyfive %></dd>

      <dt>50th Percentile</dt>
      <dd><%= @group.fifty %></dd>

      <dt>75th Percentile</dt>
      <dd><%= @group.seventyfive %></dd>

      <dt>95th Percentile</dt>
      <dd><%= @group.ninetyfive %></dd>



      <dt>Funds</dt>
      <dd>
        <ol class="list-group">
        <% Fund.where(:group_id => @group.id).each do |fund| %>
          <li class="list-group-item">
            <%= fund.name %>:  <%= fund.score %>
          </li>
        <% end %>
        </ol>
      </dd>
    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/groups" class="btn btn-primary">
        Back
      </a>
      <a href="/groups/<%= @group.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_group/<%= @group.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
